{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
          "label": "Check code",
          "type": "shell",
          "problemMatcher": [],
          "dependsOn": [
            "black module",
            // "black tests",
            "pylint module",
            // "pylint tests"
          ],
          "dependsOrder": "sequence"
        },
        {
          "label": "pylint module",
          "type": "shell",
          "command": "${config:python.pythonPath} -m pylint app -d C0330,W0622,R0913,R0903",
          "problemMatcher": []
        },
        {
          "label": "pylint tests",
          "type": "shell",
          "command": "${config:python.pythonPath} -m pylint tests -d C0111,C0330,C0114,C0115,C0116,R0201,R0915,W0201,R0914,R0912,C0415",
          "problemMatcher": []
        },
        {
          "label": "black module",
          "type": "shell",
          "command": "${config:python.pythonPath} -m black app",
          "problemMatcher": []
        },
        {
          "label": "black tests",
          "type": "shell",
          "command": "${config:python.pythonPath} -m black tests",
          "problemMatcher": []
        }
    ]
}
